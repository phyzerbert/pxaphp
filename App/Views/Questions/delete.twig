{#
  Delete Question Modal template
  Tab Size: 2 
#}
<div class="modal fade" id="deleteQuestionModal" tabindex="-1" role="dialog" aria-labelledby="deleteQuestionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md">
    <div class="modal-content">
      <div class="modal-body text-center">
        <h1><i class="fe fe-trash-2 fe-big pt-4 text-danger"></i></h1>
        <h5 class="modal-title">Do you confirm that want to delete that question?</h5>
        <small>After confirming you can not restore it back.</small>
      </div>
      <div class="modal-footer">
        <form method="post" action="/questions/delete">
          <input type="hidden" id="deleteQuestionId" name="id" value="0">
          <input type="hidden" id="deleteQuestionUrl" name="return" value="{{ this_page.url}}">
          <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>