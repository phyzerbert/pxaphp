{#
  Flash messages template. Used for displaying all messages on website (error or success).
	Messages are displayed under navbar.
  Tab Size: 2 
#}
{% if flash_messages %}
	<div class="container mt-4">

	  <div class="alert alert-primary alert-dismissible">
	    <button type="button" class="close" data-dismiss="alert"></button>
	    {% for message in flash_messages %}
	      
	      {{ message.body }} <br>
	      
	    {% endfor %}
	  </div>
	  
	</div>
{% endif %}