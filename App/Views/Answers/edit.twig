{#
  Edit Answer Modal template
  Tab Size: 2 
#}
<div class="modal fade" id="editAnswerModal" role="dialog" aria-labelledby="editAnswerModalLabel" aria-hidden="true">

  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="editAnswerModalLabel"><i class="fe fe-edit-2 text-primary"></i> Edit answer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
      </div>

      <form method="post" action="/answers/edit" id="editAnswerForm">

        <input type="hidden" id="edit_answer_id" name="answer_id" value="0">

        <div class="modal-body">

					<div class="card-body p-4">
					  <input id="new_answer" name="new_answer" type="hidden">
					  <div id="editor_answer"></div>
					</div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Close</button>
          <button type="submit" class="btn btn-primary step-sbmt">Save Answer</button>
        </div>

      </form>

    </div>
  </div>
</div>