{#
  Delete Answer Modal template
  Tab Size: 2 
#}
<div class="modal fade" id="deleteAnswerModal" tabindex="-1" role="dialog" aria-labelledby="deleteAnswerModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md">
    <div class="modal-content">
      <div class="modal-body text-center">
        <h1><i class="fe fe-trash-2 fe-big pt-4 text-danger"></i></h1>
        <h5 class="modal-title">Do you confirm that want to delete that answer?</h5>
        <small>After confirming you can not restore it back.<br> Also one point will be removed.</small>
      </div>
      <div class="modal-footer">
        <form method="post" action="/answers/delete">
          <input type="hidden" id="deleteAnswerId" name="id" value="0">
          <input type="hidden" id="deleteAnswerUrl" name="return" value="question/{{ question.url}}">
          <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>