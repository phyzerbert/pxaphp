{#
  Reset password request template which display message that email was send
  Tab Size: 2 
#}
{% extends "base.twig" %}

{% block page_title %}Forgot password{% endblock %}

{% block body %}
	
	<div class="page-single">
  	
  	<div class="container">
      <div class="row mt-8">
        <div class="col col-login mx-auto">
          <div class="card">
            <div class="card-body p-6">
              <div class="card-title">Request password reset</div>
                
              <div class="form-group">
                <small>
                  We sent an email to <b>{{ email }}</b> for resetting password.<br>
                  Please check your email.
                </small>
              </div>
            
              {% if email_provider %}
              <div class="form-footer">
                <a href="{{ email_provider.link }}" class="btn btn-primary btn-block" tabindex="1" target="_blank"> Open {{ email_provider.name }} in new tab</a>
              </div>
              {% endif %}

            </div>
          </div>
        </div>
      </div>
    </div>
	   	  
	</div>

{% endblock %}