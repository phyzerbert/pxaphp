{#
  Forgot password template
  Tab Size: 2 
#}
{% extends 'base.twig' %}

{% block page_title %}Forgot password{% endblock %}

{% block body %}

	<div class="page-single">
  	
  	<div class="container">
      <div class="row mt-8">
        <div class="col col-login mx-auto">
          <form class="card" action="/password/request-reset" method="post">
            <div class="card-body p-6">

              <div class="card-title">Request password reset</div>
              
              <div class="form-group">
                <label class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" id="exampleInputEmail1" autofocus aria-describedby="emailHelp" placeholder="Enter email" required="" tabindex="1" value="{{ email }}">
                <span id="erroremail" class="error"></span>
              </div>

              <div class="form-footer">
                <button type="submit" class="btn btn-primary btn-block" tabindex="2">Send password reset</button>
              </div>
              
            </div>
          </form>
        </div>
      </div>
    </div>
	   	  
	</div>

{% endblock %}